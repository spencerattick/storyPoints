</head>
<body>


  <h1>Story Points Breakdown </h1>

  <div class="container-not-bootstrap">

    <% for (let assignee in pointsPerAssignee) { %>
      <h2> <strong><%=assignee%></strong></h2>
      <p id="totalPoints"><strong>Total Points:</strong> <%=pointsPerAssignee[assignee].totalPoints%>
        <i onclick="hideTickets(<%=Object.keys(pointsPerAssignee).indexOf(assignee)%>)" class="fa fa-angle-up" id="arrowIcon" aria-hidden="true"></i>
      </p>
      <!-- <div class="card" style="width: 18rem;"> -->
        <ul id="toHide" class="list-group list-group-flush">
          <% for (let ticket in pointsPerAssignee[assignee].activeTickets) { %>
             <li ><strong><%=ticket%> : </strong><%=pointsPerAssignee[assignee].activeTickets[ticket]%></li>
          <%  } %>
        </ul>
      <!-- </div> -->
      <% } %>

  </div>

</body>
<script>
//for loop to catch all instances of arrowIcon?
function hideTickets(index) {
  console.log(index)
    if (document.getElementById("arrowIcon").className === "fa fa-angle-right") {
      document.getElementById("arrowIcon").className = "fa fa-angle-up";
      document.getElementsByClassName("list-group")[index].style.visibility = "visible";
      // console.log(i)

    } else {
      document.getElementById("arrowIcon").className = "fa fa-angle-right";
      document.getElementsByClassName("list-group")[index].style.visibility = "hidden";
    }
}

